ALTER TABLE Users
ADD COLUMN password VARCHAR(255) NOT NULL DEFAULT 'changeme';

UPDATE Users
SET password = CASE user_id
    WHEN 1 THEN 'TomPass123!'
    WHEN 2 THEN 'BenJ_2025'
    WHEN 3 THEN 'JimHero!'
    WHEN 4 THEN 'Alice@Wonder'
    WHEN 5 THEN 'BobBuilds#1'
    ELSE 'DefaultPass'
END;
